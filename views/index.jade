extends layout
block content
  #wrapper(ng-controller='globalController')
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation', style='margin-bottom: 0')
      .navbar-header
        button.navbar-toggle(type='button', ng-init="sideCollapsed = true", ng-click="sideCollapsed = !sideCollapsed")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/#/')
          .logo

      ul.nav.navbar-top-links.navbar-right.navbar-collapse.collapse(uib-collapse='sideCollapsed')
        li
          a(href='/#login')
            |  Login


      .navbar-default.sidebar(role='navigation')
        .sidebar-nav.navbar-collapse.collapse(uib-collapse='sideCollapsed')
          ul#side-menu.nav
            li
              a(id='first-link', href, ng-init="submenuCollapsed = true", ng-click="submenuCollapsed = !submenuCollapsed")
                i.glyphicon.glyphicon-link
                |  First Link (collapsed)
              ul.nav.nav-second-level(uib-collapse='submenuCollapsed')
                li
                  a(id='first-sub-link' href='#first-sub')
                    i.glyphicon.glyphicon-link
                    |  First Sub Link
                li
                  a(id='second-sub-link' href='#second-sub')
                    i.glyphicon.glyphicon-link
                    |  Second Sub Link


            li
              a(id='second-link', href='#second')
                i.glyphicon.glyphicon-link
                |  Second Link



    nav.navbar.navbar-default.navbar-fixed-bottom
      ul.nav.navbar-top-links.navbar-right

        li
          a(href='https://github.com/MisterDevo/TFTFT-Scaf/releases')
            | #{version}
        li
          a(href='https://github.com/MisterDevo/TFTFT-Scaf')
            i.fa.fa-github-alt


  #page-wrapper
    .row
      div(ng-view='')
